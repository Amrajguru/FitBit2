<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/prompt1"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="76dp"
        android:hint="Sleep Type:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/prompt2"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="68dp"
        android:text="Hours Slept:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/prompt1" />

    <EditText
        android:id="@+id/SleepTypeInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="68dp"
        android:ems="7"
        android:inputType="textPersonName"
        android:text="Kind of Sleep"
        app:layout_constraintStart_toEndOf="@+id/prompt1"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/SleepAmountInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:layout_marginTop="48dp"
        android:ems="7"
        android:inputType="number"
        android:hint="Amount of Sleep"
        app:layout_constraintStart_toEndOf="@+id/prompt2"
        app:layout_constraintTop_toBottomOf="@+id/SleepTypeInput" />

    <Button
        android:id="@+id/itembutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Record your Sleep"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>